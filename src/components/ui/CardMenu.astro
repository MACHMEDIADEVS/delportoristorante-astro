---
/* src/components/ui/CardMenu.astro */
interface Props {
  menu: {
    id: number;
    title: string;
    slug: string;
    image_card?: string;
  };
  gridItemClass?: string;
  itemIndex?: number;
}

const { menu, gridItemClass, itemIndex } = Astro.props;
const defaultMenuImage =
  "https://muestra.machmedianj.com/wp-content/themes/del-porto-ristorante/assets/images/delportoristorante.webp";
---

<a
  href={`/menu/${menu.slug}`}
  class={`card-menu ${gridItemClass || ""}`}
  style={`animation-delay: ${itemIndex ? itemIndex * 0.1 : 0}s;`}
>
  <img
    src={menu.image_card || defaultMenuImage}
    class="card-menu-img"
    alt={menu.title}
  />

  <div class="card-menu-overlay-visible">
    <h5 class="card-menu-title">{menu.title}</h5>
  </div>

  <div class="card-menu-overlay-hover">
    <h5 class="card-menu-title">{menu.title}</h5>
  </div>
</a>

<style lang="scss">
  .card-menu {
    position: relative;
    overflow: hidden;
    display: block;
    border-radius: 0px !important;
    aspect-ratio: 1 / 1;
    transition: transform 0.3s ease;
    height: 250px;
    width: 100%;

    &:hover {
      transform: translateY(-5px);
    }

    .card-menu-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 0;
    }

    .card-menu-overlay-visible {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 55%;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.7) 0%,
        transparent 100%
      );
      display: flex;
      align-items: flex-end;
      padding: 0.8rem;
      backdrop-filter: blur(1px);
      -webkit-backdrop-filter: blur(1px);
      overflow: hidden;
      transition: opacity 0.3s ease;
      z-index: 2;
    }

    .card-menu-overlay-visible::before {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      backdrop-filter: blur(3px);
      -webkit-backdrop-filter: blur(3px);
      mask-image: linear-gradient(to top, black 0%, transparent 100%);
      -webkit-mask-image: linear-gradient(to top, black 0%, transparent 100%);
      z-index: 1;
    }

    .card-menu-overlay-hover {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.9) 0%,
        transparent 100%
      );
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 3;
    }

    &:hover .card-menu-overlay-visible {
      opacity: 0;
    }

    &:hover .card-menu-overlay-hover {
      opacity: 1;
    }

    .card-menu-title {
      position: relative;
      overflow: hidden;
      color: var(--txt-light);
      background-color: transparent;
      border-bottom: 1px solid var(--border-light);
      border-radius: 2px;
      padding: 0.6rem 1rem;
      font-size: 0.9rem !important;
      font-weight: 500;
      text-align: start;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin: 0;
      width: 100%;
      z-index: 20;
      white-space: nowrap;
      text-overflow: ellipsis;
      transition:
        color 0.3s ease,
        border-color 0.3s ease;

      &::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -1px;
        width: 0;
        height: 2px;
        background: linear-gradient(
          120deg,
          var(--gold) 0%,
          var(--txt-light) 45%,
          var(--gold) 100%
        );
        background-size: 200% auto;
        transition: width 0.4s ease-out;
        opacity: 0;
      }

      .card-menu:hover &::after {
        width: 100%;
        opacity: 1;
        animation: shine-text 2.5s linear infinite;
      }
    }

    .card-menu-overlay-hover .card-menu-title {
      font-size: 1rem !important;
      color: var(--txt-light);
      background-color: transparent;
      border: none;
      padding: 0;
      text-align: center;
      text-transform: none;
      letter-spacing: normal;
      margin: 0;
      width: auto;
      white-space: normal;
      overflow: visible;
      text-overflow: clip;

      &::after {
        display: none;
      }
    }

    @keyframes shine-text {
      0% {
        background-position: -100% 0;
      }
      100% {
        background-position: 100% 0;
      }
    }
  }
</style>
