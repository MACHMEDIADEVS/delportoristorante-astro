---
/* src/components/sections/BookYourEvent.astro */
import { Image } from "astro:assets";
import cateringImage from "/public/assets/images/home/catering.webp";
---

<section id="book-your-event-section" class="book-your-event-hero">
  <div class="hero-image-overlay"></div>
  <div class="container hero-content text-left">
    <div class="col-lg-6 col-md-8">
      <h2 class="text-light">BOOK YOUR EVENT AT DEL PORTO</h2>
      <p class="text-light text-start">
        Host your special occasions in our elegant Bridge Banquet Room, perfect
        for weddings, celebrations, and more. With all-inclusive packages and
        flexible options, we make event planning seamless and stress-free.
      </p>
    </div>

    <div>
      <div class="row">
        <div class="col-lg-3 text-start">
          <h5>Private & Semi-Private</h5>
          <p>Private & Semi-Private Events starting at 15 guests.</p>
        </div>
        <div class="col-lg-3 text-start">
          <h5>Custom Menus</h5>
          <p>Customize menus, drinks, and d√©cor to suit your style.</p>
        </div>
        <div class="col-lg-3 text-start">
          <h5>Service Option</h5>
          <p>Choose from plated, buffet, or family-style serving options.</p>
        </div>
        <div class="col-lg-3 text-start">
          <h5>3 Step Booking</h5>
          <p>
            Simple 3-step booking process: share details, review options, and
            secure your date.
          </p>
        </div>
      </div>
      <a href="/events" class="btn btn-primary mt-3">BOOK YOUR EVENT NOW</a>
    </div>
  </div>
</section>

<style lang="scss">
  .book-your-event-hero {
    position: relative;
    height: 60dvh;
    min-height: 400px;
    background-image: url("/public/assets/images/home/catering.webp");
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    color: var(--txt-light);
    padding: 0;

    .hero-image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        to right,
        rgba(0,0,0,1) 5%,
        rgba(0, 0, 0, 0.4) 90%,
        rgba(0, 0, 0, 0) 100%
      );
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 2;
      padding-left: 10vw;
      .booking-features {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-top: 2rem;

        .feature-item {
          h5 {
            color: var(--gold);
            font-size: 1.1rem;
            font-weight: bold;
          }
          p {
            font-size: 0.9rem;
            margin-bottom: 0;
          }
        }
      }

      .btn {
        font-weight: bold;
        padding: 0.8rem 2rem;
      }
    }
  }

  @media (min-width: 992px) {
    .book-your-event-hero {
      .hero-content {
        .booking-features {
          grid-template-columns: 1fr 1fr;
          gap: 1rem 2rem;
        }
      }
    }
  }

  @media (max-width: 767.98px) {
    .book-your-event-hero {
      height: 50dvh;
      .hero-content {
        padding-left: 5vw;
        text-align: center;

        .col-lg-6,
        .col-md-8 {
          flex: 0 0 100%;
          max-width: 100%;
        }

        h2 {
          font-size: 2rem;
        }

        p {
          font-size: 1rem;
        }

        .btn {
          width: 100%;
        }
      }
      .hero-image-overlay {
        background: rgba(0, 0, 0, 0.7);
      }
    }
  }
</style>
