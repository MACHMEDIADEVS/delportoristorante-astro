---
/* src/components/sections/Newsletter.astro */
---

<section class="newsletter-section py-5 bg-darker">
  <div class="container text-center">
    <h2 class="mb-4 text-light">Subscribe to Our Newsletter</h2>
    <p class="text-muted">Stay updated on our special events, exclusive offers, and news.</p>
    <form class="d-flex justify-content-center mt-4">
      <div class="input-group mb-3" style="max-width: 500px;">
        <input type="email" class="form-control rounded-0" placeholder="Enter your email address" aria-label="Newsletter email">
        <button class="btn btn-primary rounded-0" type="submit">Subscribe</button>
      </div>
    </form>
  </div>
</section>

<style lang="scss">
  .newsletter-section {
    .input-group {
      input {
        background-color: var(--bg-dark);
        border-color: var(--border-dark);
        color: var(--txt-light);
        &:focus {
          background-color: var(--bg-dark);
          border-color: var(--gold);
          box-shadow: 0 0 0 0.25rem rgba(var(--gold), 0.25);
          color: var(--txt-light);
        }
        &::placeholder {
          color: var(--txt-muted);
        }
      }
      .btn {
        font-weight: bold;
      }
    }
  }

  body.light-theme .newsletter-section {
    .input-group {
      input {
        background-color: var(--bg-darker); /* MÃ¡s claro en tema claro */
        border-color: var(--border-dark);
        color: var(--txt-light); /* Texto oscuro en tema claro */
        &:focus {
          background-color: var(--bg-darker);
          border-color: var(--gold);
          color: var(--txt-light);
        }
      }
    }
  }
</style>