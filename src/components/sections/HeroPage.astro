---
/* src/components/sections/HeroPage.astro */
interface Props {
  title: string;
  subtitle?: string;
  imageUrl: string;
  altText: string;
}

const { title, subtitle, imageUrl, altText } = Astro.props;
---

<section class="hero-page-section position-relative d-flex align-items-center justify-content-center text-white text-center">
  <div class="hero-background-image" style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('${imageUrl}');`}></div>
  <div class="container position-relative z-1">
    <h1 class="display-3 fw-bold mb-3 text-white">{title}</h1>
    {subtitle && <p class="lead text-gold">{subtitle}</p>}
  </div>
</section>

<style lang="scss">
  .hero-page-section {
    height: 60vh; /* Altura del hero */
    overflow: hidden;
    margin-top: -75px; /* Compensa la altura del header sticky */
    padding-top: 75px; /* Asegura que el contenido no quede bajo el header */
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5); /* Sombra para mejor legibilidad del texto */

    .hero-background-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      z-index: 0;
      animation: fadeInZoom 1s ease-out; /* Animación para el hero */
    }

    .container {
      position: relative;
      z-index: 1; /* Asegura el contenido sobre la imagen */
    }

    h1 {
      font-size: 4rem !important;
      @media (max-width: 767.98px) {
        font-size: 2.8rem !important;
      }
    }

    .lead {
        font-size: 1.25rem;
    }
  }

  /* Animación de entrada para el hero */
  @keyframes fadeInZoom {
    from { opacity: 0; transform: scale(1.05); }
    to { opacity: 1; transform: scale(1); }
  }
</style>